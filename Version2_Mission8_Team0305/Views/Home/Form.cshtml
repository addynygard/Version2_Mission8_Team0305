@model Version2_Mission08_Team0305.Models.Task

<h1 class="text-center my-4">Add / Edit Task</h1>

<form method="post" asp-action="Form" asp-controller="Home" class="container" id="taskForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- Task Name -->
    <div class="mb-3">
        <label asp-for="TaskItem" class="form-label">Task</label>
        <input asp-for="TaskItem" class="form-control" placeholder="Enter task description" required />
        <span asp-validation-for="TaskItem" class="text-danger"></span>
    </div>

    <!-- Due Date -->
    <div class="mb-3">
        <label asp-for="DueDate" class="form-label">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="date" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <!-- Quadrant Selection -->
    <div class="mb-3">
        <label asp-for="Quadrant" class="form-label">Quadrant</label>
        <select asp-for="Quadrant" class="form-select" required>
            <option disabled selected>Select a Quadrant</option>
            <option value="Quadrant I">Quadrant I - Important / Urgent</option>
            <option value="Quadrant II">Quadrant II - Important / Not Urgent</option>
            <option value="Quadrant III">Quadrant III - Not Important / Urgent</option>
            <option value="Quadrant IV">Quadrant IV - Not Important / Not Urgent</option>
        </select>
        <span asp-validation-for="Quadrant" class="text-danger"></span>
    </div>

    <!-- Category Selection -->
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <select asp-for="Category" class="form-select" required>
            <option disabled selected>Select a Category</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryName">@category.CategoryName</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <!-- Completed Checkbox -->
    <div class="form-check mb-3">
        <input asp-for="Completed" class="form-check-input" type="checkbox" />
        <label asp-for="Completed" class="form-check-label">Mark as Completed</label>
    </div>

    <!-- Buttons -->
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Save Task</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
    </div>

    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="text-danger mt-3"></div>
</form>
